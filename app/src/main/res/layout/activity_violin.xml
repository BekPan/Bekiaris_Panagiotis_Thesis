<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViolinActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:contentDescription="@string/Image"
            android:id="@+id/imageViewViolin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/violin"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/buttonNoteViolinE"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginTop="230dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/round_button"
            />

        <Button
            android:id="@+id/buttonNoteViolinA"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginTop="175dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/round_button"
            />

        <Button
            android:id="@+id/buttonNoteViolinD"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_button"
            />

        <Button
            android:id="@+id/buttonNoteViolinG"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginTop="375dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/round_button"
            />
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>