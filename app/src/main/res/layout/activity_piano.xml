<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PianoActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:contentDescription="@string/Image"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/piano"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/buttonNotePianoCsharp"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="45dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoDsharp"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="169dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoFsharp"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="340dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoGsharp"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="250dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoAsharp"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="135dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoChi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoC"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoD"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoE"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="190dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoF"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginTop="290dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoG"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="285dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoA"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="185dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonNotePianoB"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="85dp"
            android:background="@android:color/transparent"/>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"
        app:backgroundTint="#808080"/>

</androidx.constraintlayout.widget.ConstraintLayout>